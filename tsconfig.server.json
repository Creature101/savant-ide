{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/server",
    "lib": [
      "es2016",
      "es2017.object"
    ],
    "types": [
      "body-parser",
      "connect",
      "cors",
      "errorhandler",
      "events",
      "express-serve-static-core",
      "express",
      "jest",
      "lusca",
      "mime",
      "node",
      "ramda",
      "range-parser",
      "serve-static",
      "uuid"
    ]
  },
  "include": [
    "src/server/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.*"
  ]
}
