{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/browser",
    "jsx": "react",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017.object"
    ],
    "module": "commonjs",
    "target": "es5"
  },
  "include": [
    "src/browser/**/*",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.*"
  ]
}
